datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider   = "prisma-client-js"
  engineType = "binary"
}

// ─── NextAuth Required Models ─────────────────────────────────────────────────

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ─── Application Models ───────────────────────────────────────────────────────

model User {
  id           String    @id @default(uuid())
  email        String    @unique
  emailVerified DateTime?
  passwordHash String?   // Optional — OAuth users won't have a password
  name         String?
  image        String?   // NextAuth standard field (maps to avatar)
  nickname     String?   @unique
  bio          String?
  city         String?
  age          Int?
  gender       String?   // "male", "female", "other"
  avatar       String?   // URL to current avatar
  isOnline     Boolean   @default(false)
  lastSeen     DateTime  @default(now())
  vipStatus    Boolean   @default(false)

  // Registration & Timestamps
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  // Moderation
  isBanned     Boolean   @default(false)
  role         String    @default("USER") // "USER", "ADMIN"

  // NextAuth Relations
  accounts     Account[]
  sessions     Session[]

  // App Relations
  photos       Photo[]
  sentLikes    Like[]    @relation("Sender")
  receivedLikes Like[]   @relation("Receiver")

  matches1     Match[]   @relation("User1")
  matches2     Match[]   @relation("User2")

  sentMessages    Message[] @relation("SenderMessage")
  receivedMessages Message[] @relation("ReceiverMessage")

  favorites       Favorite[] @relation("UserFavorites")
  favoritedBy     Favorite[] @relation("FavoritedBy")

  profileViews    ProfileView[] @relation("Viewer")
  viewedBy        ProfileView[] @relation("Viewed")
}

model Photo {
  id        String   @id @default(uuid())
  url       String
  isAvatar  Boolean  @default(false)
  isApproved Boolean @default(false)
  createdAt DateTime @default(now())

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Like {
  id         String   @id @default(uuid())
  createdAt  DateTime @default(now())
  isSeen     Boolean  @default(false)

  senderId   String
  receiverId String

  sender     User     @relation("Sender", fields: [senderId], references: [id], onDelete: Cascade)
  receiver   User     @relation("Receiver", fields: [receiverId], references: [id], onDelete: Cascade)

  @@unique([senderId, receiverId])
}

model Match {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  isSeen    Boolean  @default(false)

  user1Id   String
  user2Id   String

  user1     User     @relation("User1", fields: [user1Id], references: [id], onDelete: Cascade)
  user2     User     @relation("User2", fields: [user2Id], references: [id], onDelete: Cascade)

  @@unique([user1Id, user2Id])
}

model Message {
  id         String   @id @default(uuid())
  text       String?
  imageUrl   String?
  isRead     Boolean  @default(false)
  createdAt  DateTime @default(now())

  senderId   String
  receiverId String

  sender     User     @relation("SenderMessage", fields: [senderId], references: [id], onDelete: Cascade)
  receiver   User     @relation("ReceiverMessage", fields: [receiverId], references: [id], onDelete: Cascade)
}

model Favorite {
  id         String   @id @default(uuid())
  createdAt  DateTime @default(now())

  userId     String
  favoriteId String

  user       User     @relation("UserFavorites", fields: [userId], references: [id], onDelete: Cascade)
  favorite   User     @relation("FavoritedBy", fields: [favoriteId], references: [id], onDelete: Cascade)

  @@unique([userId, favoriteId])
}

model ProfileView {
  id         String   @id @default(uuid())
  createdAt  DateTime @default(now())
  isSeen     Boolean  @default(false)

  viewerId   String
  viewedId   String

  viewer     User     @relation("Viewer", fields: [viewerId], references: [id], onDelete: Cascade)
  viewed     User     @relation("Viewed", fields: [viewedId], references: [id], onDelete: Cascade)

  @@unique([viewerId, viewedId])
}
